<%- include('../layouts/header') %>

<div class="py-10">
    <h1 class="text-4xl my-10 font-extrabold text-center">
        Bienes<span class="font-normal">Raíces</span>
    </h1>

    <h2 class="text-center text-2xl font-extrabold">
        <%= title %>
    </h2>

        <!-- Show errors when submit form -->
        <% if (typeof errors !== 'undefined') { %>
            <div class="max-w-md mx-auto my-10">
                <% errors.forEach((error) => { %>
                    <p class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold">
                        <%= error.msg %>
                    </p>
                <% }) %>
            </div>
        <% } %>

    <div class="mt-8 mx-auto max-w-md">
        <div class="bg-white py-8 px-4 shadow">
            <form class="space-y-5" method="POST" action="/auth/olvide-contrasena" novalidate>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <div>
                    <label 
                        for="email" 
                        class="block text-sm uppercase text-gray-500 mb-2 font-bold"
                    >
                        Correo electrónico de registro
                    </label>

                    <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder="Tu correo"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"
                    />
                </div>

                <div class="flex items-center justify-between">
                    <a href="/auth/iniciar-sesion" class="text-blue-400 text-xs underline">
                        Iniciar sesión
                    </a>
                    
                    <a href="/auth/registro" class="text-blue-400 text-xs underline">
                        ¿No tienes cuenta?, Regístrate
                    </a>
                </div>

                <input
                    type="submit"
                    value="Enviar enlace de recuperación"
                    class="w-full bg-indigo-600 hover:bg-indigo-800 text-white font-bold py-3 cursor-pointer"
                />
            </form>
        </div>
    </div>
</div>

<%- include('../layouts/footer') %>
