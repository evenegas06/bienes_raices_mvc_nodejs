<%- include('../layouts/header') %>

<div class="py-10">
    <h1 class="my-10 text-4xl font-extrabold text-center">
        Bienes<span class="font-normal">Raíces</span>
    </h1>

    <h2 class="text-2xl font-extrabold text-center">
        <%= title %>
    </h2>

    <div class="max-w-4xl px-4 py-8 mx-auto my-10 bg-white rounded shadow md:px-10">
        <form action="" class="space-y-8">
            <div class="space-y-5">
                <h3 class="text-lg font-medium leading-6 text-gray-900">
                    Información General
                </h3>

                <p class="text-gray-600">
                    Añade Información sobre la propiedad en venta
                </p>

                <div>
                    <label 
                        for="title" 
                        class="block mb-2 text-sm font-bold text-gray-500 uppercase"
                    >
                        Título del Anuncio
                    </label>

                    <input
                        type="text"
                        id="title"
                        name="title"
                        placeholder="Título de la propiedad, ej. Casa en la Playa"
                        class="w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md"
                    />
                </div>
                
                <div>
                    <label 
                        for="description" 
                        class="block mb-2 text-sm font-bold text-gray-500 uppercase"
                    >
                        Descripción
                    </label>

                    <textarea
                        id="description"
                        name="description"
                        placeholder="Descripción de la propiedad"
                        class="w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md"
                    ></textarea>
                </div>

                <div class="space-y-5 md:flex md:gap-4 md:space-y-0">
                    <div class="md:w-1/2">
                        <label 
                            for="category" 
                            class="block mb-2 text-sm font-bold text-gray-500 uppercase"
                        >
                            Categoría
                        </label>

                        <select
                            id="category"
                            name="category"
                            class="w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md"
                        >
                            <option value="">- Seleccione -</option>
                        </select>
                    </div>
                    
                    <div class="md:w-1/2">
                        <label 
                            for="price" 
                            class="block mb-2 text-sm font-bold text-gray-500 uppercase"
                        >
                            Precio
                        </label>
    
                        <select
                            id="price"
                            name="price"
                            class="w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md"
                        >
                            <option value="">- Seleccione -</option>
                        </select>
                    </div>
                </div>

                <div class="space-y-5 md:flex md:gap-4 md:space-y-0">
                    <div class="md:w-1/3">
                        <label 
                            for="bedrooms" 
                            class="block mb-2 text-sm font-bold text-gray-500 uppercase"
                        >
                            Habitaciones
                        </label>

                        <select
                            id="bedrooms"
                            name="bedrooms"
                            class="w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md"
                        >
                            <option value="">- Seleccione -</option>
                            <% for(i = 0; i <= 5; i++) { %>
                                <option value="<%= i %>">
                                    <%= i %>
                                </option>
                            <% } %>
                        </select>
                    </div>
                    
                    <div class="md:w-1/3">
                        <label 
                            for="parking" 
                            class="block mb-2 text-sm font-bold text-gray-500 uppercase"
                        >
                            Estacionamiento
                        </label>
    
                        <select
                            id="parking"
                            name="parking"
                            class="w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md"
                        >
                            <option value="">- Seleccione -</option>
                            <% for(i = 0; i <= 5; i++) { %>
                                <option value="<%= i %>">
                                    <%= i %>
                                </option>
                            <% } %>
                        </select>
                    </div>
                    
                    <div class="md:w-1/3">
                        <label 
                            for="bathrooms" 
                            class="block mb-2 text-sm font-bold text-gray-500 uppercase"
                        >
                            Numero de Baños
                        </label>
    
                        <select
                            id="bathrooms"
                            name="bathrooms"
                            class="w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md"
                        >
                            <option value="">- Seleccione -</option>
                            <% for(i = 0; i <= 5; i++) { %>
                                <option value="<%= i %>">
                                    <%= i %>
                                </option>
                            <% } %>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="py-5 space-y-5 border-t border-gray-200">
                <h3 class="text-lg font-medium leading-6 text-gray-900">Ubicación</h3>
                <p class="text-gray-600">Ubica la propiedad en el mapa</p>
                
                <div id="map" class="h-96"></div>
                
                <p class="calle"></p>

                <input type="hidden" name="calle" id="calle" />
                <input type="hidden" name="lat" id="lat" />
                <input type="hidden" name="lng" id="lng" />
            </div>
        </form>
    </div>
</div> 

<script src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js"></script>
<script src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js"></script>
<script src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js"></script>
<script src="/js/map.js"></script>

<%- include('../layouts/footer') %>